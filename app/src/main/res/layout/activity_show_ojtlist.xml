<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_light">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.ShowOJTListActivity">

        <ListView
            android:id="@+id/studentListLstView"
            android:layout_width="356dp"
            android:layout_height="368dp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="15sp"
            android:layout_x="24dp"
            android:layout_y="129dp"
            android:background="@color/zxing_custom_viewfinder_mask" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="12dp"
            android:layout_y="7dp"
            android:text="Student List"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="143dp"
            android:layout_height="69dp"
            android:layout_x="125dp"
            android:layout_y="508dp"
            android:text="Accept"
            android:drawableLeft="@mipmap/approve_icon"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/companyNameThisLbl"
            android:layout_width="323dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_x="46dp"
            android:layout_y="57dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </AbsoluteLayout>
</ScrollView>