<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.example.ojtmonitoring.RateCompanyActivity">

    <RatingBar
        android:id="@+id/companyRatingBar"
        android:layout_width="237dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="52dp"

        android:background="@color/zxing_custom_viewfinder_mask"
        android:backgroundTint="@color/divider"
        android:foreground="@color/divider"
        android:numStars="5"
        android:rating="2"
        android:stepSize="1"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyNameTxt" />

    <TextView
        android:id="@+id/companyNameTxt"
        android:layout_width="227dp"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="53dp"
        android:background="@color/zxing_custom_viewfinder_mask"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cancelBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.616"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/remarksTxt" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="86dp"
        android:text="Cancel"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/remarksTxt" />

    <EditText
        android:id="@+id/remarksTxt"
        android:layout_width="353dp"
        android:layout_height="98dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/zxing_custom_viewfinder_mask"
        android:ems="10"
        android:hint="Remarks/Comments..."
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/highlight_grey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyRatingBar" />
</android.support.constraint.ConstraintLayout>
