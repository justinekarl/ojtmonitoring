<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.example.ojtmonitoring.CompanyLoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="104dp"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/sample_company_logo"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="134dp"
            android:layout_height="28dp"
            android:layout_marginTop="15dp"
            android:text="Company name:"
            android:textAlignment="center"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/custCompanyNameTxt"
            android:layout_width="151dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#21da00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="27dp"
            android:background="@mipmap/signout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/custDescriptionTxt" />

        <TextView
            android:id="@+id/custDescriptionTxt"
            android:layout_width="231dp"
            android:layout_height="83dp"
            android:layout_marginTop="18dp"
            android:textColor="#21da00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custCompanyNameTxt" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
