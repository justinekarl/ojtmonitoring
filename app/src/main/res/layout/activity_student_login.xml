<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.StudentLoginActivity">

        <TextView
            android:id="@+id/welcomeLbl"
            android:layout_width="279dp"
            android:layout_height="38dp"
            android:layout_x="95dp"
            android:layout_y="17dp"
            android:textAlignment="textEnd"
            android:textColor="#21da00"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="17dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="266dp"
            android:layout_height="42dp"
            android:layout_x="73dp"
            android:layout_y="87dp"
            android:text="Student"
            android:textAlignment="center"
            android:textColor="#21da00"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="138dp"
            android:layout_height="43dp"
            android:layout_x="6dp"
            android:layout_y="468dp"
            android:background="@mipmap/signout"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="171dp" />

        <ListView
            android:id="@+id/menuOptionsLstView"
            android:layout_width="338dp"
            android:layout_height="201dp"
            android:layout_x="26dp"
            android:layout_y="139dp"
            android:background="@color/light_teal"
            android:foreground="@color/white" />

        <TextView
            android:id="@+id/messageNotifTxt"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_x="39dp"
            android:layout_y="359dp"
            android:textAlignment="center"
            android:textColor="#fff200"
            android:textSize="16sp"
            android:textStyle="bold" />
    </AbsoluteLayout>
</ScrollView>