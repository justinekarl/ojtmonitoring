<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_light">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.CreateSectionActivity">

        <ListView
            android:id="@+id/showCompaniesLstView"
            android:layout_width="0dp"
            android:layout_height="426dp"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            tools:layout_constraintLeft_creator="1" />

        <Button
            android:id="@+id/createSectionBtn"
            android:layout_width="186dp"
            android:layout_height="49dp"
            android:text="Create Section"
            android:layout_marginTop="29dp"
            android:background="@drawable/custom_button_ok_bg"
            app:layout_constraintTop_toBottomOf="@+id/showCompaniesLstView"
            android:layout_marginLeft="8dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>