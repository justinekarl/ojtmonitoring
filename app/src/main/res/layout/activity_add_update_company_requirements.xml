<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ojtmonitoring.AddUpdateCompanyRequirements">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="39dp"
            android:text="Add/Update OJT Requirements"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="93dp"
            android:layout_height="32dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="36dp"
            android:text="College:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/collegeSpnr"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <Spinner
            android:id="@+id/collegeSpnr"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginRight="33dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="33dp"
            android:text="Will Provide Allowance:"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/allowanceYesRadBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <RadioButton
            android:id="@+id/allowanceYesRadBtn"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:text="Yes"
            app:layout_constraintRight_toLeftOf="@+id/allowanceNoRadBtn"
            android:layout_marginRight="9dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/collegeSpnr" />

        <RadioButton
            android:id="@+id/allowanceNoRadBtn"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_marginRight="3dp"
            android:text="No"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/collegeSpnr" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="138dp"
            android:layout_height="37dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="34dp"
            android:text="Allowance:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <EditText
            android:id="@+id/allowanceTxt"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="number"
            android:layout_marginRight="48dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/allowanceYesRadBtn" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="41dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="42dp"
            android:text="Php:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/textView21"
            app:layout_constraintRight_toLeftOf="@+id/allowanceTxt"
            app:layout_constraintTop_toBottomOf="@+id/allowanceYesRadBtn" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="35dp"
            android:text="Number of OJT needed:"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ojtNumberTxt"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <EditText
            android:id="@+id/ojtNumberTxt"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="number"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/allowanceTxt"
            android:layout_marginRight="31dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:layout_constraintRight_toLeftOf="@+id/cancelBtn"
            android:layout_marginRight="43dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.951" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/ojtNumberTxt"
            android:layout_marginRight="75dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
