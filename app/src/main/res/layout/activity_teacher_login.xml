<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.TeacherLoginActivity">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="115dp"
            android:layout_height="41dp"
            android:layout_x="19dp"
            android:layout_y="478dp"
            android:background="@mipmap/signout" />

        <ListView
            android:id="@+id/menuOptionsLstView"
            android:layout_width="366dp"
            android:layout_height="275dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_x="15dp"
            android:layout_y="184dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:descendantFocusability="blocksDescendants"
            android:listSelector="@drawable/listview_colors" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_x="153dp"
            android:layout_y="123dp"
            android:text="Teacher"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcomeTeacherLbl"
            android:layout_width="315dp"
            android:layout_height="29dp"
            android:layout_x="50dp"
            android:layout_y="70dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/logoutTopBtn"
            android:layout_width="105dp"
            android:layout_height="36dp"
            android:layout_x="19dp"
            android:layout_y="16dp"
            android:background="@mipmap/signout" />
    </AbsoluteLayout>
</ScrollView>
