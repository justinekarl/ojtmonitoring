<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_light"
    tools:context="com.example.ojtmonitoring.ShowSectionEnrolleesActivity">

    <TextView
        android:id="@+id/textView69"
        android:layout_width="335dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/zxing_custom_viewfinder_mask"
        android:text="Student section enrollment request"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/studentListView"
        android:layout_width="295dp"
        android:layout_height="290dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/zxing_custom_viewfinder_mask"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sectionLstview" />

    <Button
        android:id="@+id/selectAllBtn"
        android:layout_width="113dp"
        android:layout_height="48dp"
        android:text="Select All"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@mipmap/selectall_ico"
        app:layout_constraintTop_toBottomOf="@+id/studentListView"
        app:layout_constraintRight_toLeftOf="@+id/clearAllBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="8dp"
        android:text="Save"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/save_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAllBtn"
        android:layout_marginStart="65dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/cancel_icon"
        app:layout_constraintLeft_toRightOf="@+id/saveButton"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/selectAllBtn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/clearAllBtn"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:text="Clear All"
        android:drawableLeft="@mipmap/clear_all_ico"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentListView"
        android:layout_marginEnd="16dp" />

    <ListView
        android:layout_width="357dp"
        android:layout_height="164dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/sectionLstview"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/textView69"
        app:layout_constraintHorizontal_bias="0.545" />
</android.support.constraint.ConstraintLayout>
</ScrollView>