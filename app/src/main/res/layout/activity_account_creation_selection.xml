<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_light">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.AccountCreationSelectionActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RadioButton
            android:id="@+id/coordinatorRadBtn"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_width="225dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:fontFamily="sans-serif"
            android:text="Company Supervisor Account"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/companyRadBtn" />

        <RadioButton
            android:id="@+id/teacherRadBtn"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_width="230dp"
            android:layout_height="34dp"
            android:layout_below="@+id/studentRadBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:layout_x="82dp"
            android:layout_y="65dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:fontFamily="sans-serif"
            android:text="Teacher Account"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentRadBtn" />

        <RadioButton
            android:id="@+id/companyRadBtn"
            style="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton"
            android:layout_width="227dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/teacherRadBtn"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="29dp"
            android:layout_x="83dp"
            android:layout_y="205dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:text="Company Account"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teacherRadBtn" />

        <RadioButton
            android:id="@+id/studentRadBtn"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_width="229dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/teacherRadBtn"
            android:layout_below="@+id/companyRadBtn"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_x="81dp"
            android:layout_y="137dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:checked="true"
            android:fontFamily="sans-serif"
            android:text="Student Account"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView61" />

        <Button
            android:id="@+id/selAcctTypeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/teacherRadBtn"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="53dp"
            android:layout_marginRight="76dp"
            android:layout_x="84dp"
            android:layout_y="285dp"
            android:background="@color/light_blue"
            android:elevation="24dp"
            android:text="Continue"
            android:textColor="@color/zxing_status_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coordinatorRadBtn" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="8dp"
            android:layout_x="233dp"
            android:layout_y="331dp"
            android:autoText="false"
            android:background="@color/light_red"
            android:elevation="23dp"
            android:text="Cancel"
            android:textColor="@color/zxing_status_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coordinatorRadBtn"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="186dp"
            android:layout_height="152dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-51dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_add" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="292dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="57dp"
            android:background="@color/black_overlay"
            android:text="Create Account"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>