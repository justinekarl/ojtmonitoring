<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.AccountCreationSelectionActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RadioButton
            android:id="@+id/teacherRadBtn"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_width="230dp"
            android:layout_height="34dp"
            android:layout_below="@+id/studentRadBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:layout_x="82dp"
            android:layout_y="65dp"
            android:background="#582318"
            android:fontFamily="casual"
            android:text="Teacher Account"
            android:textAlignment="center"
            android:textColor="#21da00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentRadBtn" />

        <RadioButton
            android:id="@+id/companyRadBtn"
            style="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton"
            android:layout_width="227dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/teacherRadBtn"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_x="83dp"
            android:layout_y="205dp"
            android:background="#582318"
            android:checked="false"
            android:fontFamily="casual"
            android:text="Company Account"
            android:textAlignment="center"
            android:textColor="#21da00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/teacherRadBtn"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/backBtn"
            app:layout_constraintVertical_bias="0.107" />

        <RadioButton
            android:id="@+id/studentRadBtn"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_width="229dp"
            android:layout_height="34dp"
            android:layout_alignEnd="@+id/teacherRadBtn"
            android:layout_below="@+id/companyRadBtn"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_x="81dp"
            android:layout_y="137dp"
            android:background="#582318"
            android:checked="true"
            android:fontFamily="casual"
            android:text="Student Account"
            android:textAlignment="center"
            android:textColor="#21da00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="-44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <Button
            android:id="@+id/selAcctTypeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/teacherRadBtn"
            android:layout_alignParentBottom="true"
            android:layout_x="84dp"
            android:layout_y="285dp"
            android:background="#5e5e5e"
            android:elevation="24dp"
            android:text="Continue"
            android:textColor="@color/zxing_status_text"
            android:layout_marginRight="85dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="79dp"
            app:layout_constraintTop_toBottomOf="@+id/companyRadBtn" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="119dp"
            android:layout_marginLeft="79dp"
            android:layout_x="233dp"
            android:layout_y="331dp"
            android:autoText="false"
            android:background="#5e5e5e"
            android:elevation="23dp"
            android:text="Cancel"
            android:textColor="@color/zxing_status_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="106dp"
            android:layout_height="93dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="13dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/usertype"
            tools:layout_editor_absoluteY="12dp"
            tools:layout_editor_absoluteX="260dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="282dp"
            android:layout_height="185dp"
            app:srcCompat="@mipmap/create_account"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>