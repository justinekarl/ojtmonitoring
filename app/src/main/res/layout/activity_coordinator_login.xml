<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@mipmap/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ojtmonitoring.CoordinatorLoginActivity">

    <TextView
        android:id="@+id/welcomeLbl"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#21da00"
        android:textColorHint="#21da00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:background="@mipmap/signout"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/contentLstVw" />

    <ListView
        android:layout_width="345dp"
        android:layout_height="132dp"
        android:layout_marginTop="82dp"
        android:background="@color/light_teal"
        android:foreground="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLbl"
        android:id="@+id/contentLstVw"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.521" />
</android.support.constraint.ConstraintLayout>
</ScrollView>