<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewCoor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_light">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.CoordinatorLoginActivity">

        <TextView
            android:id="@+id/welcomeLbl"
            android:layout_width="343dp"
            android:layout_height="43dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textColorHint="#21da00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/logoutTopBtn" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="121dp"
            android:layout_height="48dp"
            android:layout_marginTop="95dp"
            android:background="@mipmap/signout"
            app:layout_constraintTop_toBottomOf="@+id/contentLstVw"
            tools:layout_editor_absoluteX="16dp" />

        <ListView
            android:id="@+id/contentLstVw"
            android:layout_width="386dp"
            android:layout_height="423dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/zxing_custom_viewfinder_mask"
            android:foreground="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeLbl"
            android:listSelector="@drawable/listview_colors" />

        <Button
            android:id="@+id/logoutTopBtn"
            android:layout_width="112dp"
            android:layout_height="42dp"
            android:background="@mipmap/signout"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.031" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>