<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_light"
    android:fitsSystemWindows="true">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ojtmonitoring.CreateCompanyAccountActivity">


        <EditText
            android:id="@+id/custCompanyNameTxt"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:layout_above="@+id/addressText"
            android:layout_alignEnd="@+id/addressText"
            android:layout_marginBottom="21dp"
            android:layout_x="132dp"
            android:layout_y="38dp"
            android:background="@drawable/custom_input_bg"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/companyNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/custCompanyNameTxt"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/custCompanyNameTxt"
            android:layout_x="5dp"
            android:layout_y="39dp"
            android:text="Company Name:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="39dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_x="64dp"
            android:layout_y="3dp"
            android:text="Create Company Account"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addressText"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:layout_above="@+id/custPhoneNumberTxt"
            android:layout_alignEnd="@+id/userNameTxt"
            android:layout_x="130dp"
            android:layout_y="78dp"
            android:background="@drawable/custom_input_bg"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="87dp" />

        <TextView
            android:id="@+id/phoneNumberLbl"
            android:layout_width="123dp"
            android:layout_height="42dp"
            android:layout_alignBaseline="@+id/custPhoneNumberTxt"
            android:layout_alignBottom="@+id/custPhoneNumberTxt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_x="5dp"
            android:layout_y="141dp"
            android:text="Phone Number:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="180dp" />

        <TextView
            android:id="@+id/addressLbl"
            android:layout_width="121dp"
            android:layout_height="42dp"
            android:layout_alignStart="@+id/companyNameLbl"
            android:layout_alignTop="@+id/addressText"
            android:layout_x="5dp"
            android:layout_y="86dp"
            android:text="Address:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="105dp" />

        <EditText
            android:id="@+id/custPhoneNumberTxt"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:layout_above="@+id/companyTypeSpnr"
            android:layout_alignEnd="@+id/addressText"
            android:layout_x="132dp"
            android:layout_y="138dp"
            android:background="@drawable/custom_input_bg"
            android:ems="10"
            android:inputType="phone"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="167dp" />

        <ListView
            android:id="@+id/coursesLstVw"
            android:layout_width="365dp"
            android:layout_height="147dp"
            android:layout_x="8dp"
            android:layout_y="188dp"
            
            android:scrollbars="horizontal|vertical" />

        <TextView
            android:id="@+id/confirmPasswordLbl"
            android:layout_width="113dp"
            android:layout_height="49dp"
            android:layout_x="8dp"
            android:layout_y="480dp"
            
            android:text="Confirm Password:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirmPasswordTxt"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:layout_x="127dp"
            android:layout_y="483dp"
            android:background="@drawable/custom_input_bg"

            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/passwordlBl"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/userNameTxt"
            android:layout_toStartOf="@+id/companyTypeSpnr"
            android:layout_x="10dp"
            android:layout_y="432dp"

            android:text="Password:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="303dp" />

        <EditText
            android:id="@+id/userNameTxt"
            android:layout_width="252dp"
            android:layout_height="39dp"
            android:layout_above="@+id/userNameTxt"
            android:layout_alignStart="@+id/userNameTxt"
            android:layout_marginBottom="27dp"
            android:layout_x="124dp"
            android:layout_y="387dp"
            android:background="@drawable/custom_input_bg"

            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="295dp" />

        <EditText
            android:id="@+id/passwordTxt"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:layout_above="@+id/cancelSaveCompany"
            android:layout_marginBottom="28dp"
            android:layout_toEndOf="@+id/phoneNumberLbl"
            android:layout_x="123dp"
            android:layout_y="433dp"
            android:background="@drawable/custom_input_bg"

            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="349dp" />

        <TextView
            android:id="@+id/userNameLbl"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/addressLbl"
            android:layout_alignTop="@+id/userNameTxt"
            android:layout_x="11dp"
            android:layout_y="389dp"

            android:text="Username:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="303dp" />

        <EditText
            android:id="@+id/companyTypeTxt"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:layout_x="126dp"
            android:layout_y="337dp"
            android:background="@drawable/custom_input_bg"

            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/companyTypeLbl"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_alignTop="@+id/companyTypeSpnr"
            android:layout_toStartOf="@+id/companyTypeSpnr"
            android:layout_x="10dp"
            android:layout_y="340dp"

            android:text="Company Type:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="248dp" />

        <Button
            android:id="@+id/cancelSaveCompany"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/userNameTxt"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="37dp"
            android:layout_x="49dp"
            android:layout_y="537dp"
            android:background="@drawable/custom_button_cancelbg"
            android:drawableLeft="@mipmap/cancel_icon"
            android:text="Cancel"
            android:textColor="@color/zxing_status_text"
            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/saveCompanyAccount"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_alignBaseline="@+id/cancelSaveCompany"
            android:layout_alignStart="@+id/userNameTxt"
            android:layout_alignBottom="@+id/cancelSaveCompany"
            android:layout_x="226dp"
            android:layout_y="536dp"
            android:background="@drawable/custom_button_ok_bg"
            android:drawableLeft="@mipmap/save_icon"
            android:ems="10"
            android:text="Save"
            android:textColor="@color/zxing_status_text"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="416dp" />
    </AbsoluteLayout>
</ScrollView>