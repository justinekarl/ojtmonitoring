<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/referencesLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="References"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_below="@+id/referencesLbl"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
             />

         <EditText
             android:id="@+id/refName1Txt"
             android:layout_width="250dp"
             android:layout_height="match_parent"
             android:layout_alignTop="@+id/textView33"
             android:layout_toEndOf="@+id/referencesLbl" />

        <EditText
            android:id="@+id/refAddress1Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/textView33"
            android:layout_below="@+id/refName1Txt"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:hint="Address"
             />

        <EditText
            android:id="@+id/refPhone1Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/textView33"
            android:layout_below="@+id/refAddress1Txt"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/refOccupation1Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/textView33"
            android:layout_below="@+id/refPhone1Txt"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:hint="Occupation"
             />


        <!-- -->

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_below="@+id/refOccupation1Txt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/refName2Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refOccupation1Txt"
            android:layout_toEndOf="@+id/referencesLbl" />


        <EditText
            android:id="@+id/refAddress2Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refName2Txt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:hint="Address"
             />

        <EditText
            android:id="@+id/refPhone2Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refAddress2Txt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/refOccupation2Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refPhone2Txt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:hint="Occupation"
            />



        <!-- -->

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_below="@+id/refOccupation2Txt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/refName3Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refOccupation2Txt"
            android:layout_toEndOf="@+id/referencesLbl" />


        <EditText
            android:id="@+id/refAddress3Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refName3Txt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:hint="Address"
             />

        <EditText
            android:id="@+id/refPhone3Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refAddress3Txt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/refOccupation3Txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/refPhone3Txt"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:hint="Occupation"
            />


    </RelativeLayout>
</ScrollView>